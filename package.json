{
  "name": "neurapath-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "clean": "rm -rf node_modules && rm -rf .svelte-kit && bun i",
    "typegen": "wrangler types",
    "cf:dev": "wrangler pages dev .svelte-kit/cloudflare --compatibility-date=2025-07-22",
    "cf:deploy": "bun run build && wrangler pages deploy .svelte-kit/cloudflare",
    "cf:deploy:prod": "bun run build && wrangler pages deploy .svelte-kit/cloudflare --env production"
  },
  "devDependencies": {
    "@internationalized/date": "^3.8.2",
    "@lucide/svelte": "^0.515.0",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/adapter-cloudflare": "^7.1.1",
    "@sveltejs/kit": "^2.26.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/pdfjs-dist": "^2.10.378",
    "clsx": "^2.1.1",
    "layerchart": "2.0.0-next.27",
    "mode-watcher": "^1.1.0",
    "svelte": "^5.36.17",
    "svelte-check": "^4.3.0",
    "svelte-sonner": "^1.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@latest"
  },
  "dependencies": {
    "@tsndr/cloudflare-worker-jwt": "^3.2.0",
    "bcrypt-ts": "^7.1.0",
    "bits-ui": "^2.8.13",
    "pdfjs-dist": "^5.3.93",
    "quill": "^2.0.3"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}